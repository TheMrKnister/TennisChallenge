@using CaptchaLib
@model TennisWeb.Models.ContactFormModel
         
@{
  ViewBag.Title = "Kontakt";
}

@section Scripts
{
  <script type="text/javascript" src="@Url.Content("~/Scripts/captcha.js")"></script>
}

<h2>Kontakt</h2>
@if (ViewData["Success"] != null)
{
  <p id="contact-success">
    Vielen Dank. Ihre Anfrage wurde übermittelt.
  </p>
}
<p>
  Bitte nutzen Sie das folgende Formular für Ihre Anfragen und Probleme bei der Verwendung von "tennis-challenge.ch".
</p>

@using (Html.BeginForm())
{
  @Html.ValidationSummary(true)
  <div class="display-row">
    <span class="display-label">
      @Html.LabelFor(m => m.Title)
    </span>
    <span class="editor-field">
      @Html.EditorFor(m => m.Title)
      @Html.ValidationMessageFor(m => m.Title)
    </span>
  </div>
  <div class="display-row">
    <span class="display-label">
      @Html.LabelFor(m => m.Firstname)
    </span>
    <span class="editor-field">
      @Html.EditorFor(m => m.Firstname)
      @Html.ValidationMessageFor(m => m.Firstname)
    </span>
  </div>
  <div class="display-row">
    <span class="display-label">
      @Html.LabelFor(m => m.Name)
    </span>
    <span class="editor-field">
      @Html.EditorFor(m => m.Name)
      @Html.ValidationMessageFor(m => m.Name)
    </span>
  </div>
  <div class="display-row">
    <span class="display-label">
      @Html.LabelFor(m => m.EMailAddress)
    </span>
    <span class="editor-field">
      @Html.EditorFor(m => m.EMailAddress)
      @Html.ValidationMessageFor(m => m.EMailAddress)
    </span>
  </div>
  @*<div class="display-row">
    <span class="display-label">
      @Html.LabelFor(m => m.PhoneLocal)
    </span>
    <span class="editor-field">
      @Html.EditorFor(m => m.PhoneLocal)
      @Html.ValidationMessageFor(m => m.PhoneLocal)
    </span>
  </div>*@
  <div class="display-row">
    <span class="display-label">
      @Html.LabelFor(m => m.Subject)
    </span>
    <span class="editor-field">
      @Html.EditorFor(m => m.Subject)
      @Html.ValidationMessageFor(m => m.Subject)
    </span>
  </div>
  <div class="display-row">
    <span class="display-label">
      @Html.LabelFor(m => m.Message)
    </span>
    <span class="editor-field">
      @Html.EditorFor(m => m.Message)
      @Html.ValidationMessageFor(m => m.Message)
    </span>
  </div>
  <div class="display-row">
    <span class="display-label">Geben Sie die vier Zahlen im Bild in die Box ein.</span>
    <span class="editor-field">
      @Html.CaptchaFor(m => m.Captcha, "GetCaptcha", "Neue Nummer generieren")
      @Html.ValidationMessageFor(m => m.Captcha)
    </span>
  </div>

  <input type="submit" value="Absenden" />

}