        @:Turnierleiter
      }
    </div>
  </div>
  <div class="@interclubActive @(isInterClubOrganizer ? "adminMenuAvailable" : "adminMenuNotAvailable")">
    <div class="linkImage interclub">
      <img src="@Url.Content("~/Content/images/Interclubleiter6.png")" alt="Edit Users" />
    </div>
    <div class="linkText">
      @if (isInterClubOrganizer)
      {
        @Html.ActionLink("Interklubleiter", "CreateInterclubBooking")
