  </div>
  <div class="@advertisementActive @(isAdvertisementManager ? "adminMenuAvailable" : "adminMenuNotAvailable")">
    <div class="linkImage §">
      <img src="@Url.Content("~/Content/images/Werbung8.png")" alt="Edit Users" />
