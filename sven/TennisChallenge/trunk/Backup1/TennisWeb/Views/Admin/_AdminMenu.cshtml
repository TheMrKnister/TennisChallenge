@model AdminNavigationCat?
@{
  var editUserActive = AdminNavigationCat.EditUser == Model ? "active" : "";
  var janitorActive = AdminNavigationCat.Janitor == Model ? "active" : "";
  var teacherActive = AdminNavigationCat.Teacher == Model ? "active" : "";
  var tournamentActive = AdminNavigationCat.Tournament == Model ? "active" : "";
  var interclubActive = AdminNavigationCat.Interclub == Model ? "active" : "";
  var hostActive = AdminNavigationCat.Host == Model ? "active" : "";
  var eventActive = AdminNavigationCat.Event == Model ? "active" : "";
  var advertisementActive = AdminNavigationCat.Advertisement == Model ? "active" : "";
  var topicalitiesActive = AdminNavigationCat.Topicalities == Model ? "active" : "";

  var isClubAdmin = User.IsInRoles(RoleNames.ClubAdmin);
  var isJanitor = User.IsInRoles(RoleNames.Janitor);
  var isTennisTeacher = User.IsInRoles(RoleNames.TennisTeacher);
  var isCasualTournamentOrganizer = User.IsInRoles(RoleNames.CasualTournamentOrganizer);
  var isInterClubOrganizer = User.IsInRoles(RoleNames.InterClubOrganizer);
  var isHost = User.IsInRoles(RoleNames.Host);
  var isEventManager = User.IsInRoles(RoleNames.EventManager);
  var isAdvertisementManager = User.IsInRoles(RoleNames.AdvertisementManager);
  var isTopicalityManger = User.IsInRoles(RoleNames.TopicalityManger);
}

<div id="adminNavigation">
  <div class="@editUserActive @(isClubAdmin ? "adminMenuAvailable" : "adminMenuNotAvailable")">
    <div class="linkImage User">
      <img src="@Url.Content("~/Content/images/Benutzer_1.png")" alt="Edit Users" />
    </div>
    <div class="linkText">
      @if (isClubAdmin)
      {
        @Html.ActionLink("Benutzer Bearbeiten", "EditUser")
      }
      else
      {
        @:Benutzer Bearbeiten
      }
    </div>
  </div>
  <div class="@janitorActive @(isJanitor ? "adminMenuAvailable" : "adminMenuNotAvailable")">
    <div class="linkImage janitor">
      <img src="@Url.Content("~/Content/images/Platzwart2.png")" alt="Janitor" />
    </div>
    <div class="linkText">
      @if (isJanitor)
      {
        @Html.ActionLink("Platzwart", "EditCourtLockings")
      }
      else
      {
        @:Platzwart
      }
    </div>
  </div>
  <div class="@teacherActive @(isTennisTeacher ? "adminMenuAvailable" : "adminMenuNotAvailable")">
    <div class="linkImage tenniscoach">
      <img src="@Url.Content("~/Content/images/Tenniscoach3.png")" alt="Tennis Teacher" />
    </div>
    <div class="linkText">
      @if (isTennisTeacher)
      {
        @Html.ActionLink("Tennis Lehrer", "CreateTeacherBooking")
      }
      else
      {
        @:Tennis Lehrer
      }
    </div>
  </div>
  <div class="@tournamentActive @(isCasualTournamentOrganizer ? "adminMenuAvailable" : "adminMenuNotAvailable")">
    <div class="linkImage tournament">
      <img src="@Url.Content("~/Content/images/Turnierleiter5.png")" alt="Tournament Organizer" />
