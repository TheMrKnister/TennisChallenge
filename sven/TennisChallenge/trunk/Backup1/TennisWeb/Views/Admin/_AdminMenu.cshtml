      {
        @:Interklubleiter
      }
    </div>
  </div>
  <div class="@hostActive @(false ? "adminMenuAvailable" : "adminMenuNotAvailable")">
    <div class="linkImage wirt">
      <img src="@Url.Content("~/Content/images/Wirt6.png")" alt="Edit Users" />
    </div>
    <div class="linkText">
      @* TODO: Implement Host *@
      @if (false)
      {
        @Html.ActionLink("Wirt", "UsersInClubsList")
      }
      else
      {
        @:Wirt
      }
    </div>
  </div>
  <div class="@eventActive @(false ? "adminMenuAvailable" : "adminMenuNotAvailable")">
    <div class="linkImage eventmanager">
      <img src="@Url.Content("~/Content/images/Eventmanager7.png")" alt="Edit Users" />
    </div>
    <div class="linkText">
