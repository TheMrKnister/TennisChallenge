@model TennisWeb.Models.BookingSeriesModel

<div id="booking-series-links">
  <input type="button" name="open-create-booking-series" value="Seriebuchung" />
  @Html.ActionLink("Verwalten", "ListBookingSeries")
</div>

<div id="create-booking-series">
  @using (Html.BeginForm("CreateBookingSeries", null))
  {
    @Html.HiddenFor(m => m.BookingTypeEnum)
    @Html.ValidationSummary(true)
    
    <div class="editor-label">
      @Html.LabelFor(m => m.Name)
    </div>
    <div class="editor-field">
      @Html.EditorFor(m => m.Name)
      @Html.ValidationMessageFor(m => m.Name)
    </div>
    
    <div class="editor-label">
      @Html.LabelFor(m => m.Title)
    </div>
    <div class="editor-field">
      @Html.EditorFor(m => m.Title)
      @Html.ValidationMessageFor(m => m.Title)
    </div>

    <div class="editor-label">
      @Html.LabelFor(m => m.Start)
    </div>
    <div class="editor-field">
      @Html.TextBoxFor(m => m.Start, new { @class = "time-picker" })
      @Html.ValidationMessageFor(m => m.Start)
    </div>

    <div class="editor-label">
      @Html.LabelFor(m => m.End)
    </div>
    <div class="editor-field">
      @Html.TextBoxFor(m => m.End, new { @class = "time-picker" })
      @Html.ValidationMessageFor(m => m.End)
    </div>

    <div class="editor-label">
      @Html.LabelFor(m => m.CourtFk)
    </div>
    <div class="editor-field">
      @Html.DropDownListFor(m => m.CourtFk, new SelectList(Model.AllCourts, "CourtKey", "Name"), "Platz auswählen")
      @Html.ValidationMessageFor(m => m.CourtFk)
    </div>

    <div class="editor-label">
      @Html.LabelFor(m => m.Scheme)
    </div>
    <div class="editor-field">
      @Html.DropDownListFor(m => m.Scheme, SelectListUtils.EnumSelectList<TennisWeb.Models.SerialBookingSchemes>())
      @Html.ValidationMessageFor(m => m.Scheme)
    </div>

    <div class="editor-label">
      @Html.LabelFor(m => m.DaysOfWeek)
    </div>
    <div class="editor-field">
      @Html.ListBoxFor(m => m.DaysOfWeek, SelectListUtils.DaysOfWeek(System.Globalization.CultureInfo.GetCultureInfo("de-Ch")))
      @Html.ValidationMessageFor(m => m.DaysOfWeek)
    </div>

    <div class="editor-label week-of-month">
      @Html.LabelFor(m => m.WeekOfMonth)
    </div>
    <div class="editor-field week-of-month">
      @Html.EditorFor(m => m.WeekOfMonth)
      @Html.ValidationMessageFor(m => m.WeekOfMonth)
    </div>

    <div class="editor-label">
      @Html.LabelFor(m => m.SeriesStart)
    </div>
    <div class="editor-field">
      @Html.EditorFor(m => m.SeriesStart, "RegisterDate")
      @Html.ValidationMessageFor(m => m.SeriesStart)
    </div>

    <div class="editor-label">
      @Html.LabelFor(m => m.SeriesEnd)
    </div>
    <div class="editor-field">
      @Html.EditorFor(m => m.SeriesEnd, "RegisterDate")
      @Html.ValidationMessageFor(m => m.SeriesEnd)
    </div>
    <p>
      <input type="submit" value="Erstellen" />
    </p>
  }
</div>
